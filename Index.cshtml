@model new_1.Product

@{
    ViewBag.Title = "Product Page";
}

<h2>Product Page</h2>

<div class="form-horizontal">
    <h4>Product</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(Model => Model.ID)
    @Html.HiddenFor(Model => Model.CreateDate)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" id="btnAdd" value="Add" onclick="return Add();" class="btn btn-default" />
            <input type="submit" id="btnUpdate" value="Update" onclick="Update();" class="btn btn-primary" />
        </div>
    </div>
</div>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayName("Action")</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
        </tr>
    </thead>

    <tbody class="tbody">
    </tbody>

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {
            showData();
        });

        function showData() {
            $.ajax({
                url: "/api/values",
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = '';
                    $.each(result, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + item.ID + '</td>';
                        html += '<td>' + item.Name + '</td>';
                        html += '<td>' + item.Category + '</td>';
                        html += '<td>' + item.Price + '</td>';
                        html += '<td>' + item.CreateDate + '</td>';
                        html += '<td> <a href="#" onclick="return getbyID(' + item.ID + ')">Edit</a> | <a href="#" onclick="Delele(' + item.ID + ')">Delete</a></td > ';
                        html += '</tr>';
                    });
                    $('.tbody').html(html);
                    $('#btnUpdate').hide();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }

        function Add() {
            var productObj = {
                Name: $('#Name').val(),
                Category: $('#Category').val(),
                Price: $('#Price').val()
            };
            $.ajax({
                url: "/api/values",
                data: JSON.stringify(productObj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    showData();
                    clearTextBox();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
        function getbyID(ID) {
            $.ajax({
                url: "/api/values/" + ID,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    $('#ID').val(result.ID);
                    $('#Name').val(result.Name);
                    $('#Category').val(result.Category);
                    $('#Price').val(result.Price);
                    $('#CreateDate').val(result.CreateDate);
                    $('#btnUpdate').show();
                    $('#btnAdd').hide();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
            return false;
        }

        //function for updating productloyee's record
        function Update() {
            var productObj = {
                ID: $('#ID').val(),
                Name: $('#Name').val(),
                Category: $('#Category').val(),
                Price: $('#Price').val(),
                CreateDate: $('#CreateDate').val(),
            };
            $.ajax({
                url: "/api/values",
                data: JSON.stringify(productObj),
                type: "PUT",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    showData();
                    clearTextBox();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }
        function Delele(ID) {
            var ans = confirm("Are you sure you want to delete this Product?");
            if (ans) {
                $.ajax({
                    url: "/api/values/" + ID,
                    type: "Delete",
                    contentType: "application/json;charset=UTF-8",
                    dataType: "json",
                    success: function (result) {
                        showData();
                        $('#btnUpdate').hide();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        }

        function clearTextBox() {
            $('#ID').val("");
            $('#Name').val("");
            $('#Category').val("");
            $('#Price').val("");
            $('#btnUpdate').hide();
            $('#btnAdd').show();
        }
    </script>
}